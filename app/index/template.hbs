{{outlet}}

{{#if showStatus}}
<div class="row">
  <div class="col s4 offset-s1 lime lighten-2">Users: {{session.content.secure.email}}</div>
  <div class="col s2 lime lighten-3">Today finish {{myTodayItemsCount}} items</div>
  <div class="col s2 lime lighten-4">Spent on {{moment-duration myTodayItemsDuration}}</div>
  <div class="col s2 lime lighten-5">Total items: {{myItemsCount}}</div>
</div>
{{/if}}

<table class="bordered ember-view">
<thead>
  <tr>
      <th>By</th>
      <th>Action</th>
      <th>Work Item</th>
      <th>Start at</th>
      <th>Finish at</th>
      <th>Duration</th>
      <th>Ticket#</th>
      <th>Belong category</th>
  </tr>
</thead>
<tbody>
{{#each model as |item|}}
  {{item-row
    sessionEmail=session.content.secure.email
    item=item
    itemEmail=item.user.email
  }}
{{/each}}
</tbody>
</table>